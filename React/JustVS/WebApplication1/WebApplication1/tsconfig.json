{
  "compileOnSave": true,
  "removeComments": false,
  "compilerOptions": {
    // Include .jsx files in the compilation
    "allowJs": true,
    "outDir": "./wwwroot/js",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ES2015",
    // If you do not include moduleResolution: node, you'll get a weird compile error in the
    // React typings files
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    // The lib definition is needed, because the node typings included uses of Map, Set, Symbol, WeakMap, WeakSet.
    // However, these are ES6 symbols, and we're targeting ES5.
    // We can do without the node typings (this is not a Node application), but they get included when doing an
    // npm install (they are not explicitly mentioned in the package.json file). See
    // https://stackoverflow.com/questions/39416691/webpack-ts2304-cannot-find-name-map-set-promise/39418293
    "lib": [ "es5", "es6", "dom" ]
  },
  "include": [
    "src/**/*",
    "Views/**/*"
  ]
}
