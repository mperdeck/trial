@{
    Layout = "../Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Blog Posts";
}

<section id="intro" class="main">
    <header class="major">
        <h2>@ViewBag.Title</h2>
    </header>
    @foreach (var post in Documents["Posts"])
    {
        <h3><a href="/Blog/@post.String("RelativeFilePath")">@post.String("Title")</a></h3>
        <p>Published on @(post.Get<DateTime>("Published").ToLongDateString())</p>
    }
    
    <hr/>
    <p>This page is statically generated by Wyam at build time.</p>
</section>