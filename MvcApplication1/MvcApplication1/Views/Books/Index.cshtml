@using MvcApplication1.Models
@model IEnumerable<Book>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <p>
        @Html.ActionLink("Add Book", "Add")
    </p>

    <h1>Books list</h1>
    <div>
        <ul>
        @foreach (var book in Model)
        {
            <li>@book.BookId - @book.Name - @book.ISDN</li>
        }
        </ul>
    </div>
</body>
</html>
